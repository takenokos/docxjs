{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "pretty": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "importHelpers": false,
    "target": "es6",
    "outDir": "dist",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}